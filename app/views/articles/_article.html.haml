= content_tag_for :article, article, class: article.css do
  .article_title
    - if @articles
      %span.mark-as-read= article.mark_as_read_link
      = link_to article.title, article_path(article)
    - else
      = article.title

  .article_content= article.body

  = render 'user_info', :article => article, :profile_size => "100"

= article.bottom(@articles, articles_path)
